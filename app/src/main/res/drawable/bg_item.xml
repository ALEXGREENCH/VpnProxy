<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="-6dp" android:right="-6dp" android:state_selected="true" android:top="-6dp">
        <shape>
            <solid android:color="#316733" />
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <corners android:radius="20dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item android:bottom="-6dp" android:right="-6dp" android:state_pressed="true" android:top="-6dp">
        <shape>
            <solid android:color="#316733" />
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <corners android:radius="20dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item android:bottom="-6dp" android:right="-6dp" android:state_selected="false" android:top="-6dp">
        <shape>
            <solid android:color="@color/primary" />
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <corners android:radius="20dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
</selector>